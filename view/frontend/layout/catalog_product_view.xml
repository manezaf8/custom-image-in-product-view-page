<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   
   <head>
       <!-- for css file -->
       <css src="Ecomplete_Brandlogo::css/brandlogo.css"/>

       <!-- for js file -->
       <script src="Ecomplete_Brandlogo::js/brandlogo.js"/>
       
    </head>
   
    <body>
        <referenceContainer name="product.info.main">
            <block name="brandlogo_image" after="product.info.price" class="Ecomplete\Brandlogo\Block\Product\View" template="Ecomplete_Brandlogo::product/view/brandlogo.phtml"/>
        </referenceContainer>
        <move element="brandlogo.image" destination="product.info" before="product.info.addtocart" />
    </body>
</page>
